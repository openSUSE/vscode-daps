{
  "name": "daps",
  "displayName": "DAPS",
  "description": "Tool for authoring and publishing documentation written in DocBook XML.",
  "version": "0.0.4",
  "repository": "https://github.com/openSUSE/vscode-daps",
  "publisher": "openSUSE",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "workspaceContains:**/DC-*"
  ],
  "main": "./extension.js",
  "contributes": {
    "submenus": [
      {
        "id": "daps",
        "label": "DAPS",
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "daps",
          "when": "resourceFilename =~ /DC-*/",
          "group": "daps"
        }
      ],
      "daps": [
        {
          "command": "daps.validate"
        },
        {
          "command": "daps.build"
        }
      ]
    },
    "keybindings": [
      {
        "command": "daps.XMLformat",
        "key": "ctrl+shift+i",
        "when": "editorLangId == xml"
      }
    ],
    "commands": [
      {
        "command": "daps.validate",
        "title": "Validate",
        "category": "DAPS"
      },
      {
        "command": "daps.build",
        "title": "Build",
        "category": "DAPS"
      },
      {
        "command": "daps.XMLformat",
        "title": "Format XML document",
        "category": "DAPS",
        "enablement": "editorLangId == xml"
      }
    ],
    "configuration": {
      "title": "DAPS",
      "properties": {
        "daps.DCfile": {
          "description": "Set the DC file for the current workspace. If not specified, the user is asked to select one",
          "type": "string",
          "default": null
        },
        "daps.buildTarget": {
          "description": "The build target for the current workspace. If not specified, the user is asked to select one",
          "type": "string",
          "default": null
        }
      }
    },
    "configurationDefaults": {
      "xml.format.enabled": false
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  }
}